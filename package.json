{
  "name": "test-task",
  "type": "commonjs",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run replace-paths && npm run copy:assets && rimraf dist && npx move-file build dist",
    "replace-paths": "npx tsconfig-replace-paths-new --project tsconfig.build.json -s ./src",
    "dev": "nodemon -q",
    "start": "node dist/main.js",
    "build-and-start": "npm run build && npm run start",
    "test:e2e": "vitest run --config ./e2e/vitest.config.ts",
    "test:e2e:watch": "vitest --config ./e2e/vitest.config.ts",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "copy:assets": "npx cpy ./src/assets/**/* ./build/assets/",
    "migrate:make": "knex migrate:make -x ts --knexfile ./src/knexfile.ts",
    "migrate:up": "knex migrate:latest --knexfile ./src/knexfile.ts",
    "migrate:latest": "knex migrate:up --knexfile ./src/knexfile.ts",
    "migrate:down": "knex migrate:down --knexfile ./src/knexfile.ts",
    "migrate:rollback-all": "knex migrate:rollback --all --knexfile ./src/knexfile.ts",
    "seed:make": "knex seed:make --knexfile ./src/knexfile.ts",
    "seed:run": "knex seed:run --knexfile ./src/knexfile.ts"
  },
  "dependencies": {
    "awilix": "^12.0.5",
    "awilix-manager": "^6.1.0",
    "axios": "^1.10.0",
    "fastify": "^5.4.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "dotenv": "^17.0.1"
  }
}
